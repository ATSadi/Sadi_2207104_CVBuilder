<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ahnafsadi_cvbuilder.FormController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #071038;">

    <top>
        <Label text="Enter your details" textFill="WHITE" BorderPane.alignment="CENTER">
            <font><Font size="20"/></font>
            <BorderPane.margin>
                <Insets top="16"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <GridPane hgap="12" vgap="12">
            <padding>
                <Insets top="24" left="24" right="24" bottom="24"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints prefWidth="200"/>
                <ColumnConstraints prefWidth="500"/>
            </columnConstraints>

            <Label text="Full Name" textFill="WHITE"/>
            <TextField fx:id="inputName" GridPane.columnIndex="1"/>

            <Label text="Email" textFill="WHITE" GridPane.rowIndex="1"/>
            <TextField fx:id="inputEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Phone" textFill="WHITE" GridPane.rowIndex="2"/>
            <TextField fx:id="inputNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Address" textFill="WHITE" GridPane.rowIndex="3"/>
            <TextArea fx:id="inputAdd" GridPane.columnIndex="1" GridPane.rowIndex="3"
                      prefRowCount="2"/>

            <Label text="Education (comma separated)" textFill="WHITE" GridPane.rowIndex="4"/>
            <TextArea fx:id="inputEducation" GridPane.columnIndex="1" GridPane.rowIndex="4"
                      prefRowCount="2"/>

            <Label text="Skills (comma separated)" textFill="WHITE" GridPane.rowIndex="5"/>
            <TextArea fx:id="inputSkills" GridPane.columnIndex="1" GridPane.rowIndex="5"
                      prefRowCount="2"/>

            <Label text="Experience (comma separated)" textFill="WHITE" GridPane.rowIndex="6"/>
            <TextArea fx:id="inputWork" GridPane.columnIndex="1" GridPane.rowIndex="6"
                      prefRowCount="2"/>

            <Label text="Projects (comma separated)" textFill="WHITE" GridPane.rowIndex="7"/>
            <TextArea fx:id="inputProject" GridPane.columnIndex="1" GridPane.rowIndex="7"
                      prefRowCount="2"/>

            <Label text="Profile Picture" textFill="WHITE" GridPane.rowIndex="8"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
                <Button text="Choose Image" onAction="#onChooseImage"/>
                <ImageView fx:id="profileImageView"
                           fitWidth="80" fitHeight="80"
                           preserveRatio="true"
                           style="-fx-border-color:white; -fx-border-width:1"/>
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Button text="Create CV" onAction="#onBuildCv"/>
        </HBox>
    </bottom>

</BorderPane>
