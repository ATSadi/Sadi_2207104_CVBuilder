<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ahnafsadi_cvbuilder.FormController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: white;">

    <top>
        <Label text="Enter your details" textFill="black" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" left="30" right="30" bottom="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="500"/>
            </columnConstraints>

            <Label text="Full Name" textFill="black"/>
            <TextField fx:id="inputName" GridPane.columnIndex="1"/>

            <Label text="Email" textFill="black" GridPane.rowIndex="1"/>
            <TextField fx:id="inputEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Phone" textFill="black" GridPane.rowIndex="2"/>
            <TextField fx:id="inputNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Address" textFill="black" GridPane.rowIndex="3"/>
            <TextArea fx:id="inputAdd" GridPane.columnIndex="1" GridPane.rowIndex="3"
                      prefRowCount="2"/>

            <Label text="Education (comma separated)" textFill="black" GridPane.rowIndex="4"/>
            <TextArea fx:id="inputEducation" GridPane.columnIndex="1" GridPane.rowIndex="4"
                      prefRowCount="2"/>

            <Label text="Skills (comma separated)" textFill="black" GridPane.rowIndex="5"/>
            <TextArea fx:id="inputSkills" GridPane.columnIndex="1" GridPane.rowIndex="5"
                      prefRowCount="2"/>

            <Label text="Experience (comma separated)" textFill="black" GridPane.rowIndex="6"/>
            <TextArea fx:id="inputWork" GridPane.columnIndex="1" GridPane.rowIndex="6"
                      prefRowCount="2"/>

            <Label text="Projects (comma separated)" textFill="black" GridPane.rowIndex="7"/>
            <TextArea fx:id="inputProject" GridPane.columnIndex="1" GridPane.rowIndex="7"
                      prefRowCount="2"/>

            <Label text="Profile Picture" textFill="black" GridPane.rowIndex="8"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
                <Button text="Choose Image" onAction="#onChooseImage"/>
                <ImageView fx:id="profileImageView"
                           fitWidth="80" fitHeight="80"
                           preserveRatio="true"
                           style="-fx-border-color: black; -fx-border-width: 1;"/>
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="30" bottom="15" left="30"/>
            </padding>
            <Button fx:id="createButton" text="Create CV" onAction="#onBuildCv"/>
        </HBox>
    </bottom>

</BorderPane>
